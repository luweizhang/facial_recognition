{
    "manifest_version": 2,
    "name":    "LinkedIn Facial Recognition",
    "author" : "Luwei Zhang",
    "version": "0.0",
    "offline_enabled": true,

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches":    ["<all_urls>"],
        "js":         ["content.js"],
        "run_at":     "document_idle",
        "all_frames": false
    }],

   "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
}
    // No special permissions required...
    //"permissions": []
}